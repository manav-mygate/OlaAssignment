<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/slate_grey_30"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/cardBackgroundView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/bg_rounded_ciricle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/img"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvTitle"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Manav Chandrakar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">

            </TextView>

            <TextView
                android:id="@+id/tvDesc"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                tools:text="Introduction to dagger"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="6dp"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/tvLink"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                tools:text="www.google.com"
                android:textSize="16sp"
                android:layout_marginTop="6dp"
                app:layout_constraintRight_toRightOf="parent"/>


            <LinearLayout
                android:visibility="gone"
                android:id="@+id/llStats"
                android:layout_marginTop="6dp"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvLanguage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:drawablePadding="12dp"
                    android:drawableLeft="@drawable/dot"
                    tools:text="C"
                    android:layout_marginTop="6dp"
                    app:layout_constraintRight_toRightOf="parent"/>

                <TextView
                    android:id="@+id/tvStars"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/staryellow"
                    tools:text="154893"
                    android:layout_marginTop="6dp"
                    app:layout_constraintRight_toRightOf="parent"/>

                <TextView
                    android:id="@+id/tvForks"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/forkblack"
                    tools:text="487489"
                    android:layout_marginTop="6dp"
                    app:layout_constraintRight_toRightOf="parent"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>